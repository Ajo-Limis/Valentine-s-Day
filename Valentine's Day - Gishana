    </div>

    <!-- Page Indicator -->
    <div class="page-indicator">
        <span id="current-page">1</span> / 7
    </div>

    <!-- Navigation Buttons -->
    <div class="nav-container">
        <button id="btn-prev" class="btn btn-prev" disabled>‚Üê Back</button>
        <button id="btn-next" class="btn btn-next">Next ‚Üí</button>
    </div>

    <!-- External JavaScript -->
    <script src="script.js"></script>
</body>
<script>
    /* ============================================
   BlueLove - Valentine's App
   Main JavaScript Controller
   ============================================ */

// ============================================
// STATE MANAGEMENT
// ============================================

const APP_STATE = {
    currentPage: 0,
    totalPages: 7,
    touchStartX: 0,
    touchEndX: 0,
    isAnimating: false,
};

// ============================================
// DOM ELEMENTS
// ============================================

const pages = document.querySelectorAll('.page');
const btnNext = document.getElementById('btn-next');
const btnPrev = document.getElementById('btn-prev');
const currentPageDisplay = document.getElementById('current-page');
const floatingHeartsContainer = document.getElementById('floatingHearts');
const container = document.querySelector('.container');

// ============================================
// INITIALIZATION
// ============================================

function initialize() {
    createFloatingHearts();
    attachEventListeners();
    updatePageDisplay();
    showPage(0);
}

// ============================================
// PAGE NAVIGATION
// ============================================

/**
 * Display specific page with animation
 * @param {number} pageIndex - Index of page to display (0-6)
 */
function showPage(pageIndex) {
    if (APP_STATE.isAnimating) return;
    
    APP_STATE.isAnimating = true;
    
    // Deactivate all pages
    pages.forEach(page => page.classList.remove('page-active'));
    
    // Activate target page
    pages[pageIndex].classList.add('page-active');
    
    // Update state
    APP_STATE.currentPage = pageIndex;
    
    // Create scattered hearts on final page
    if (pageIndex === APP_STATE.totalPages - 1) {
        createScatteredHearts();
        
        // Vibrate on mobile (if supported)
        if (navigator.vibrate) {
            navigator.vibrate([50, 30, 50, 30, 100]);
        }
    }
    
    // Update UI
    updatePageDisplay();
    updateButtonStates();
    
    // Unlock animation state after transition
    setTimeout(() => {
        APP_STATE.isAnimating = false;
    }, 800);
}

/**
 * Move to next page
 */
function nextPage() {
    if (APP_STATE.currentPage < APP_STATE.totalPages - 1) {
        showPage(APP_STATE.currentPage + 1);
    }
}

/**
 * Move to previous page
 */
function previousPage() {
    if (APP_STATE.currentPage > 0) {
        showPage(APP_STATE.currentPage - 1);
    }
}

// ============================================
// UI UPDATES
// ============================================

/**
 * Update page indicator display
 */
function updatePageDisplay() {
    currentPageDisplay.textContent = APP_STATE.currentPage + 1;
}

/**
 * Update button disabled states
 */
function updateButtonStates() {
    const isFirstPage = APP_STATE.currentPage === 0;
    const isLastPage = APP_STATE.currentPage === APP_STATE.totalPages - 1;
    
    btnPrev.disabled = isFirstPage;
    btnNext.disabled = isLastPage;
}

// ============================================
// HEART ANIMATIONS
// ============================================

/**
 * Create background floating hearts with responsive count
 */
function createFloatingHearts() {
    let heartCount;
    let animationInterval;
    
    // Adaptive heart count based on device breakpoints
    if (window.innerWidth <= 359) {
        heartCount = 4;       // Small phones
        animationInterval = 5000;
    } else if (window.innerWidth >= 360 && window.innerWidth <= 480) {
        heartCount = 8;       // Standard phones
        animationInterval = 4000;
    } else if (window.innerWidth >= 481 && window.innerWidth <= 767) {
        heartCount = 10;      // Large phones
        animationInterval = 3500;
    } else if (window.innerWidth >= 768 && window.innerWidth <= 1024) {
        heartCount = 12;      // Tablets
        animationInterval = 3000;
    } else {
        heartCount = 15;      // Large tablets
        animationInterval = 3000;
    }
    
    // Create initial batch of hearts
    for (let i = 0; i < heartCount; i++) {
        createSingleFloatingHeart();
    }
    
    // Periodically create new hearts
    setTimeout(createFloatingHearts, animationInterval);
}

/**
 * Create a single floating heart with SVG
 */
function createSingleFloatingHeart() {
    const heart = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
    heart.setAttribute('class', 'float-heart');
    heart.setAttribute('viewBox', '0 0 100 100');
    
    // Randomize position and animation timing
    const startX = Math.random() * window.innerWidth;
    const startY = window.innerHeight + 20;
    const duration = 8 + Math.random() * 6;
    const delay = Math.random() * 3;
    
    heart.style.left = startX + 'px';
    heart.style.top = startY + 'px';
    heart.style.animationDuration = duration + 's';
    heart.style.animationDelay = delay + 's';
    
    // Add heart symbol
    const use = document.createElementNS('http://www.w3.org/2000/svg', 'use');
    use.setAttributeNS('http://www.w3.org/1999/xlink', 'href', '#heart');
    heart.appendChild(use);
    
    floatingHeartsContainer.appendChild(heart);
    
    // Remove heart after animation completes
    const removeTime = (duration + delay + 2) * 1000;
    setTimeout(() => {
        if (heart.parentNode) {
            heart.parentNode.removeChild(heart);
        }
    }, removeTime);
}

/**
 * Create scattered hearts for final page
 */
function createScatteredHearts() {
    const container = document.getElementById('scattered-hearts-container');
    container.innerHTML = ''; // Clear previous hearts
    
    let heartCount;
    let distance;
    
    // Responsive configuration per breakpoint
    if (window.innerWidth <= 359) {
        heartCount = 6;
        distance = 80;
    } else if (window.innerWidth >= 360 && window.innerWidth <= 480) {
        heartCount = 8;
        distance = 100;
    } else if (window.innerWidth >= 481 && window.innerWidth <= 767) {
        heartCount = 10;
        distance = 130;
    } else if (window.innerWidth >= 768 && window.innerWidth <= 1024) {
        heartCount = 12;
        distance = 160;
    } else {
        heartCount = 15;
        distance: 200;
    }
    
    // Create scattered hearts in circular pattern
    for (let i = 0; i < heartCount; i++) {
        const heart = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
        heart.setAttribute('class', 'small-scattered-heart');
        heart.setAttribute('viewBox', '0 0 100 100');
        
        // Calculate position on circle
        const angle = (i / heartCount) * Math.PI * 2;
        const tx = Math.cos(angle) * distance;
        const ty = Math.sin(angle) * distance;
        
        // Set custom properties for animation
        heart.style.setProperty('--tx', `${tx}px`);
        heart.style.setProperty('--ty', `${ty}px`);
        heart.style.width = getHeartSize() + 'px';
        heart.style.height = getHeartSize() + 'px';
        heart.style.animation = `scatter 1.5s ease-out forwards`;
        
        // Add heart symbol
        const use = document.createElementNS('http://www.w3.org/2000/svg', 'use');
        use.setAttributeNS('http://www.w3.org/1999/xlink', 'href', '#heart');
        heart.appendChild(use);
        
        container.appendChild(heart);
    }
}

/**
 * Get responsive heart size for scattered hearts
 * @returns {number} Heart size in pixels
 */
function getHeartSize() {
    if (window.innerWidth <= 359) return 12;
    if (window.innerWidth >= 360 && window.innerWidth <= 480) return 14;
    if (window.innerWidth >= 481 && window.innerWidth <= 767) return 16;
    if (window.innerWidth >= 768 && window.innerWidth <= 1024) return 18;
    return 20;
}

// ============================================
// EVENT LISTENERS
// ============================================

/**
 * Attach all event listeners
 */
function attachEventListeners() {
    // Button clicks
    btnNext.addEventListener('click', nextPage);
    btnPrev.addEventListener('click', previousPage);
    
    // Keyboard navigation
    document.addEventListener('keydown', handleKeyboardNavigation);
    
    // Touch swipe navigation
    document.addEventListener('touchstart', handleTouchStart, false);
    document.addEventListener('touchend', handleTouchEnd, false);
    
    // Keyboard arrow keys support
    document.addEventListener('keydown', (e) => {
        if (e.key === ' ' || e.key === 'Enter') {
            e.preventDefault();
            nextPage();
        }
    });
}

/**
 * Handle keyboard navigation
 * @param {KeyboardEvent} event - Keyboard event
 */
function handleKeyboardNavigation(event) {
    if (event.key === 'ArrowRight' || event.key === ' ') {
        event.preventDefault();
        nextPage();
    }
    if (event.key === 'ArrowLeft') {
        event.preventDefault();
        previousPage();
    }
}

/**
 * Handle touch start
 * @param {TouchEvent} event - Touch event
 */
function handleTouchStart(event) {
    APP_STATE.touchStartX = event.changedTouches[0].screenX;
}

/**
 * Handle touch end (swipe detection)
 * @param {TouchEvent} event - Touch event
 */
function handleTouchEnd(event) {
    APP_STATE.touchEndX = event.changedTouches[0].screenX;
    detectSwipe();
}

/**
 * Detect swipe direction and navigate
 */
function detectSwipe() {
    const swipeThreshold = 50; // Minimum swipe distance
    const difference = APP_STATE.touchStartX - APP_STATE.touchEndX;
    
    // Swiped left - next page
    if (difference > swipeThreshold) {
        nextPage();
    }
    
    // Swiped right - previous page
    if (difference < -swipeThreshold) {
        previousPage();
    }
}

// ============================================
// RESPONSIVE UPDATES
// ============================================

/**
 * Handle window resize for responsive updates
 */
window.addEventListener('resize', () => {
    // Could be used for responsive adjustments
    // Currently handled via CSS media queries
});

// ============================================
// PERFORMANCE OPTIMIZATION
// ============================================

// Use requestAnimationFrame for smooth animations
if (!window.requestAnimationFrame) {
    window.requestAnimationFrame = (callback) => {
        return setTimeout(callback, 1000 / 60);
    };
}

// Use cancelAnimationFrame fallback
if (!window.cancelAnimationFrame) {
    window.cancelAnimationFrame = (id) => {
        clearTimeout(id);
    };
}

// ============================================
// START APP
// ============================================

// Initialize app when DOM is ready
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initialize);
} else {
    initialize();
}

// ============================================
// DEBUGGING (Optional)
// ============================================

// Uncomment to see state in console
// setInterval(() => {
//     console.log('Current Page:', APP_STATE.currentPage + 1);
// }, 5000);

</script>
</html>
