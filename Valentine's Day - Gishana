        transform: scale(1);
    }
    50% {
        transform: scale(1.2);
    }
}

@keyframes zoomIn {
    from {
        opacity: 0;
        transform: scale(0.5);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes merge {
    0%, 100% {
        transform: translateX(-30px);
    }
    50% {
        transform: translateX(0) scale(1.15);
        filter: drop-shadow(0 0 20px rgba(255, 20, 147, 0.8));
    }
}

@keyframes beat {
    0% {
        transform: scale(1);
    }
    25% {
        transform: scale(1.25);
    }
    50% {
        transform: scale(1);
    }
    75% {
        transform: scale(1.15);
    }
    100% {
        transform: scale(1);
    }
}

@keyframes gather {
    0% {
        opacity: 0.5;
        transform: translateY(20px);
    }
    50% {
        filter: drop-shadow(0 0 20px rgba(255, 20, 147, 0.7));
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes floatingEmoji {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }
    50% {
        opacity: 1;
    }
    100% {
        opacity: 0;
        transform: translateY(-50px);
    }
}

@keyframes floatUp {
    0% {
        opacity: 0;
        transform: translateY(100vh) rotateZ(0deg);
    }
    10% {
        opacity: 0.6;
    }
    90% {
        opacity: 0.6;
    }
    100% {
        opacity: 0;
        transform: translateY(-100vh) rotateZ(360deg);
    }
}

@keyframes explode {
    0% {
        opacity: 0;
        transform: scale(0) rotateZ(0deg);
    }
    50% {
        opacity: 1;
    }
    100% {
        opacity: 1;
        transform: scale(1) rotateZ(360deg);
        filter: drop-shadow(0 0 40px rgba(255, 20, 147, 0.9));
    }
}

@keyframes scaleGlow {
    from {
        opacity: 0;
        transform: scale(0.8);
        filter: blur(5px);
    }
    to {
        opacity: 1;
        transform: scale(1);
        filter: blur(0) drop-shadow(0 0 30px rgba(255, 20, 147, 0.8));
    }
}

@keyframes scatter {
    0% {
        opacity: 1;
        transform: translate(0, 0) scale(1);
    }
